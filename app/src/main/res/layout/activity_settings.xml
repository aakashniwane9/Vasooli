<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="Mrinal Maheshwari"
            android:textColor="#777"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="140dp"
            android:textFontWeight="140sp"/>

        <TextView
            android:id="@+id/txt_splitbillfull"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Split Bills Full"/>


        <TextView
            android:id="@+id/txt_splitbillpartial"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Split Bills Partial"/>


        <TextView
            android:id="@+id/txt_history"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="History"/>


        <TextView
            android:id="@+id/txt_changepin"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change PIN"/>


        <TextView
            android:id="@+id/txt_deleteaccount"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Account"/>

        <TextView
            android:id="@+id/txt_logout"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout" />


        <Button
            android:id="@+id/btn_upgrade"
            android:layout_marginTop="35dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Upgrade to Premium"
            />
    </LinearLayout>




</RelativeLayout>